{
  "manifest_version": 3,
  "name": "ChatBoss - AI招呼语生成器",
  "version": "1.0.0",
  "description": "根据招聘JD和您的简历自动生成个性化招呼语",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.zhipin.com/*",
    "*://*.zhaopin.com/*",
    "*://*.51job.com/*",
    "*://*.lagou.com/*",
    "*://*.liepin.com/*",
    "*://*.indeed.com/*",
    "*://*.glassdoor.com/*",
    "*://*.jobrapido.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.zhipin.com/*",
        "*://*.zhaopin.com/*",
        "*://*.51job.com/*",
        "*://*.lagou.com/*",
        "*://*.liepin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.jobrapido.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
